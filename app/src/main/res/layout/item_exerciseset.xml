<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_exerciseset"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/setStartTimeNameNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentSetWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:10:30 Benchpress-10" />

    <android.support.v7.widget.RecyclerView
        android:textColor="@android:color/black"
        android:background="@drawable/background_prevset"
        android:id="@+id/previousSetsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toStartOf="@+id/currentSetWeight"
        app:layout_constraintStart_toEndOf="@+id/setStartTimeNameNumber"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/currentSetWeight"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/currentSetReps"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/currentSetReps"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentSetWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>